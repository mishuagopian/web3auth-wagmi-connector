{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "out",
    "paths": {
      "crypto": [
        "./node_modules/crypto-browserify"
      ],
      "stream": [
        "./node_modules/stream-browserify"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
}
